<% unless comment.archived? %>
  <p>
    <b>Commenter:</b>
    <%= comment.commenter %>
  </p>

  <p>
    <b>Comment:</b>
    <%= comment.body %>
  </p>

  <p>
    <%= link_to 'Destroy Comment', article_comment_path(article_id: @article.id, id: comment.id), data: {
      method: :delete,
      confirm: 'Are you sure?'
    } %>
  </p>
<% end %>